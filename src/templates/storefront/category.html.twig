{% extends 'storefront/base.html.twig' %}
{% block content %}

    <div class="container">
        {% if blogs is empty %}
            <div class="alert alert-warning mt-3">Bu kategoriye ait blog bulunmamaktadır.</div>
        {% endif %}
        {% for blog in blogs %}
            <div class="col-lg-8">
                <div class="card my-4">
                    <div class="card-body">
                        <div class="small text-muted"><span>{{ blog.createdAt|date('d M Y') }}</span> at <span>{{ blog.createdAt|date('H:i') }}</span></div>
                        <h2 class="card-title">{{ blog.title }}</h2>
                        <p class="card-text">{{ blog.content[:200] }}...</p>
                        <a class="btn btn-primary" href="/blog-detail/{{ blog.id }}">Read more →</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}