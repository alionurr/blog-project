{% extends 'admin/base.html.twig' %}

{% block content %}


    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">{{ blog.title }}</h3>
            </div>
            <div class="card-body">
                <p class="card-text">{{ blog.content }}</p>
                    <ul>
                        {% for category in blog.categories %}
                            <li>{{ category.name }}</li>
                        {% endfor %}
                    </ul>
                <div>Author : {{ blog.author }}</div>
                <div>{{ blog.updatedAt|date }}</div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col">
                <a href="/admin/dashboard" class="btn btn-dark mr-2">Go Back</a>
                <a href="/admin/blog-update/{{ blog.id }}" class="btn btn-success">Update</a>
            </div>
        </div>
    </div>
{% endblock %}